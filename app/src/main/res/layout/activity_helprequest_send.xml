<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도움요청"
            android:id="@+id/textView8"
            android:textSize="20dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true">


            <EditText
                android:id="@+id/memo_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="내용을 입력하세요."
                android:gravity="top"
                android:background="@android:drawable/edit_text"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="44dp"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/radioButton" />


            <Button
            android:id="@+id/enrollment_btn"
            android:text="등록"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/canceld_btn" />


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위치확인"
                android:id="@+id/radioButton"
                android:checked="false"
                android:layout_marginBottom="57dp"
                android:layout_above="@+id/enrollment_btn"
                android:layout_toStartOf="@+id/radioButton3" />

            <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호노출"
            android:id="@+id/radioButton3"
                android:checked="false"
                android:layout_alignTop="@+id/radioButton2"
                android:layout_alignEnd="@+id/canceld_btn" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="도움받는중"
                android:id="@+id/radioButton2"
                android:layout_alignTop="@+id/radioButton"
                android:layout_toEndOf="@+id/radioButton3"
                android:checked="false" />

            <Button
                android:id="@+id/canceld_btn"
                android:text="취소"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="105dp" />



            <requestFocus
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/radioButton" />

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>